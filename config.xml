<?xml version='1.0' encoding='utf-8'?>
<widget id="com.encaneestudio.apprajobos" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<preference name="phonegap-version" value="cli-5.2.0" />
    <name>Apprajobos</name>
    <description>
		Escucha mis temazos desde tu smartphone
    </description>
    <author email="dev@encaneestudio.com" href="http://encaneestudio.com">
        Encane Estudio
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
